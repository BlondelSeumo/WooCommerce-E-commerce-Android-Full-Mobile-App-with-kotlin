<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlItem"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/spacing_control_half"
    android:layout_marginEnd="@dimen/spacing_control_half"
    android:layout_marginBottom="@dimen/spacing_standard"
    android:background="@drawable/bg_shadow"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/cardImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:paddingStart="@dimen/spacing_standard_new"
            android:paddingTop="@dimen/spacing_standard_new"
            android:paddingEnd="@dimen/spacing_standard_new">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/text_todo"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_product2" />
        </RelativeLayout>


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:layout_below="@id/cardImg"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingTop="@dimen/spacing_control"
        android:paddingEnd="@dimen/spacing_standard"
        android:textAppearance="@style/FontMedium"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_size_medium" />
        <TextView
            android:id="@+id/tvDiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:paddingStart="@dimen/spacing_standard"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/spacing_standard"
            android:singleLine="true"
            android:textAppearance="@style/FontSemiBold"
            android:textColor="@color/PrimaryHeadingColor"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/tvOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvDiscountPrice"
            android:layout_alignBottom="@id/tvDiscountPrice"
            android:layout_marginStart="@dimen/spacing_control"
            android:layout_marginEnd="@dimen/spacing_control"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:layout_toEndOf="@id/tvDiscountPrice"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_size_small" />

        <ImageView
            android:id="@+id/ivMoveToCart"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/tvProductName"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@id/cardImg"
            android:layout_alignBottom="@id/tvDiscountPrice"
            android:layout_marginTop="@dimen/spacing_control"
            android:layout_marginEnd="@dimen/spacing_standard"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:src="@drawable/ic_shopping_cart" />
    </RelativeLayout>


